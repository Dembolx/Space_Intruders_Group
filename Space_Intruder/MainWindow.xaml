<Window x:Class="Space_Intruder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Intruder"
        xmlns:game="clr-namespace:Space_Intruder.GameObjects"
        mc:Ignorable="d"
        Title="Space Intruder"
        Width="1200"
        Height="600"
        KeyDown="Window_KeyDown">

    <Grid>
        <Canvas x:Name="MyCanvas">
            <Canvas.Background>
                <ImageBrush ImageSource="pack://application:,,,/Images/background.jpg" Stretch="UniformToFill"/>
            </Canvas.Background>
        </Canvas>
        <TextBlock x:Name="current_level" Text="Level 1" FontSize="24" HorizontalAlignment="Center"/>
        <TextBlock x:Name="current_life" Text="❤❤❤" FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30"/>
    </Grid>
</Window>